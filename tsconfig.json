    "outDir": "dist",
    "sourceMap": true,
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": [
